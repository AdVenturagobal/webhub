{
  "rewrites": [
    { "source": "/en", "destination": "/pages/en.html" },
    { "source": "/cn", "destination": "/pages/cn.html" },
    { "source": "/es", "destination": "/pages/es.html" },
    { "source": "/pt", "destination": "/pages/pt.html" },
    { "source": "/about/en", "destination": "/pages/about-en.html" },
    { "source": "/about/cn", "destination": "/pages/about-cn.html" },
    { "source": "/about/es", "destination": "/pages/about-es.html" },
    { "source": "/about/pt", "destination": "/pages/about-pt.html" }
  ],
  "redirects": [
    {
      "source": "/",
      "destination": "/en",
      "permanent": false,
      "locale": {
        "has": ["accept-language"],
        "value": "en-US,en"
      }
    },
    {
      "source": "/",
      "destination": "/cn",
      "permanent": false,
      "locale": {
        "has": ["accept-language"],
        "value": "zh-CN,zh"
      }
    },
    {
      "source": "/",
      "destination": "/es",
      "permanent": false,
      "locale": {
        "has": ["accept-language"],
        "value": "es-ES,es"
      }
    },
    {
      "source": "/",
      "destination": "/pt",
      "permanent": false,
      "locale": {
        "has": ["accept-language"],
        "value": "pt-BR,pt"
      }
    },
    {
      "source": "/",
      "destination": "/en",
      "permanent": false
    }
  ]
}